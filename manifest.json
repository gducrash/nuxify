{
  "manifest_version": 3,
  "name": "Nuxify",
  "version": "0.1",
  "description": "Takes every Youtube video starting with \"I\", replaces it with \"we\", and adds Nux Taku in the thumbnail",
  "action": {
    "default_title": "Nuxify",
    "default_popup": "popup/index.html",
    "default_icon": "assets/icons/icon-16.png"
  },
  "icons": {
    "16": "assets/icons/icon-16.png",
    "32": "assets/icons/icon-32.png",
    "48": "assets/icons/icon-48.png",
    "128": "assets/icons/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "js": [
        "scripts/content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "resources": [
        "assets/media/nux01.jpg"
      ]
    },
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "resources": [
        "assets/media/thumb0.png"
      ]
    },
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "resources": [
        "assets/media/thumb1.png"
      ]
    },
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "resources": [
        "assets/media/thumb2.png"
      ]
    },
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "resources": [
        "assets/media/thumb3.png"
      ]
    },
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "resources": [
        "assets/media/thumb4.png"
      ]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "nuxify@gducrash",
      "strict_min_version": "60.0"
    }
  }
}